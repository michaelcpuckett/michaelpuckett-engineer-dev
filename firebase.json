{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [{
      "source": "as/inbox",
      "function": "as"
    }, {
      "source": "as/followers",
      "function": "as"
    }],
    "headers": [{
      "source": "public/as/actor",
      "headers": [{
        "key": "Content-Type",
        "value": "application/ld+json; profile=\"https://www.w3.org/ns/activitystreams\""
      }]
    }, {
      "source": "public/.well-known/webfinger",
      "headers": [{
        "key": "Content-Type",
        "value": "application/json"
      }]
    }]
  }
}
